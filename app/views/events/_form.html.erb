<%= simple_form_for @event do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, label:"", placeholder: 'Naam' %>
  <%= f.text_field :start_at, placeholder: 'Kies Datum' %><br>
  <%= f.hidden_field :end_at, :value => :start_at %>
	<%= f.hidden_field :all_day, :value => true %>

  <%= f.button :submit, 'Maak nieuwe actie' %>
<% end %>

