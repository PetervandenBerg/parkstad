<%= simple_form_for [@event, @attendance] do |f| %>
  <%= f.error_notification %>

  <%= f.collection_select :attending, [[true, 'Aanwezig'],[false, 'Afwezig']], :first, :last, label: "" %>
  <%= f.input :msg, placeholder: 'Plaats eventueel een bericht', label: false %><br>
  <%= f.input :event_id, :as => :hidden, :value => @event.id %>
  
  <%= f.button :submit, 'Bevestig' %><br>
<% end %>

